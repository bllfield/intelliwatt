{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "//": "Uncomment the cron below to enable hourly sweep in production.",
  "crons": [
    {
      "path": "/api/admin/rates/refresh",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/rates/efl-refresh",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/admin/cron/normalize-smt",
      "schedule": "*/5 * * * *"
    }
  ]
}
