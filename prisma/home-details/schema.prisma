/// Module schema for Home Details database. Migrations live in prisma/home-details/migrations.
generator homeDetailsClient {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  output        = "../../.prisma/home-details-client"
}

datasource homeDetailsDb {
  provider = "postgresql"
  url      = env("HOME_DETAILS_DATABASE_URL")
}

model HomeDetailsModuleBootstrap {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
}

model HomeProfileSimulated {
  id                  String   @id @default(cuid())
  userId              String
  houseId             String

  homeAge             Int
  homeStyle           String
  squareFeet          Int
  stories             Int
  insulationType      String
  windowType          String
  foundation          String
  ledLights           Boolean
  smartThermostat     Boolean
  summerTemp          Int
  winterTemp          Int
  occupantsWork       Int
  occupantsSchool     Int
  occupantsHomeAllDay Int
  fuelConfiguration   String

  provenanceJson Json?
  prefillJson    Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, houseId])
  @@index([userId])
  @@index([houseId])
}

